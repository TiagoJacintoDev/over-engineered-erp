// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

enum UserType {
  ADMIN
  USER
}

model User {
  id        String     @id @default(uuid())
  firstName String
  lastName  String
  country   String?
  password  String?
  email     String     @unique
  status    UserStatus @default(ACTIVE)
  type      UserType   @default(USER)

  @@map("Users")
}
